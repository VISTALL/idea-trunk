  <idea-version since-build="8000" min="8.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
    <inspectionToolProvider implementation="org.jetbrains.w3validators.css.W3ValidatorsToolProvider"/>
